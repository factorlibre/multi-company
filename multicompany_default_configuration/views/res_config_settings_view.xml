<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='companies_setting_container']" position="inside">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="company_details_settings"
                >
                    <span class="o_form_label">Multi-Company</span>
                    <br />
                    <div class="text-muted">
                        Check the options to true if you want products and/or companies
                        to be shared between all companies. This setting will work from
                        now on, it is recommended to review the "company" in existing
                        products and companies after changing the values.
                    </div>
                    <br />
                    <div class="o_setting_left_pane">
                        <field name="share_companies" />
                        <br />
                        <field name="share_products" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="share_companies" />
                        <br />
                        <label for="share_products" />
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
